{
  "name": "veribridge",
  "version": "1.0.0",
  "description": "VeriBridge - Global Address Verification Platform",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"npm run dev -w client\" \"npm run dev -w server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w client",
    "install:all": "npm install",
    "clean": "rm -rf client/node_modules server/node_modules node_modules client/dist server/dist"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/veribridge"
  },
  "keywords": [
    "verification",
    "address",
    "kyc",
    "compliance",
    "google-play",
    "mpesa"
  ],
  "author": "Your Name",
  "license": "MIT"
}